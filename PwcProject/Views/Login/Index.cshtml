<!doctype html>
@{ 
    Layout = null;
}
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/variable.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>PWC - FIMS</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    
</head>
<body class="login_box">
    <div class="container">
        <div class="row sha_dow m-auto" style="border:none">
            <div class="col-md-12">
                <div class="row w-75 m-auto bg_red w-m-100">
                    <div class="col-md-6 m-auto py-2">
                        <h3 class="white_cl p-font">Welcome!</h3>
                        <div class="login-border"></div>
                    </div>
                    <div class="col-md-6 bg_white">
                        <div class="row px-2 py-5">
                            
                            <div class="col-md-8 col-sm-8 col-xs-8 mb-3 pt-2">
                                <h6 class="font-weight-bold p-font">PWC Project</h6>
                            </div>
                            <div class="col-md-12 mb-2">
                                <h6 class="font-weight-bold s-font">Sign in</h6>
                            </div>
                            <div class="col-md-12">
                                <form method="post" id="frmLogin" asp-action="Login" asp-controller="Login">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1" class="red_cl fnt14">Email</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control border-right-0" aria-label="Amount (to the nearest dollar)" id="Email" name="Email">
                                            <div class="input-group-append">
                                                <span class="input-group-text bg_white border-left-0"><i class="fa fa-envelope red_cl" aria-hidden="true"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label for="exampleInputPassword1" class="red_cl fnt14">Password</label>
                                        <div class="input-group">
                                            <input type="password" class="form-control border-right-0" aria-label="Amount (to the nearest dollar)" id="Password" name="Password">
                                            <div class="input-group-append">
                                                <span class="input-group-text bg_white border-left-0"><span class="icon-password_icon red_cl fnt20" aria-hidden="true"></span></span>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 prime_btn font-weight-bold">Sign In</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>